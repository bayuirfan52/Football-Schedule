<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding"
              android:orientation="horizontal"
>
    <ImageView
            android:id="@+id/iv_teams"
            android:layout_width="@dimen/iv_team"
            android:layout_height="@dimen/iv_team"
            android:contentDescription="@string/teams"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/padding_top"
            android:layout_marginBottom="@dimen/padding_bottom"
    />

    <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/teams"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/team_name"
            android:textStyle="normal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

</LinearLayout>